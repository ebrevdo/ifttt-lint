{
  "name": "ifttt-lint",
  "version": "0.0.1",
  "description": "A high-concurrency Node.js IFTTT linter",
  "main": "dist/main.js",
  "types": "dist",
  "bin": {
    "ifttt-lint": "dist/main.js"
  },
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint src tests perf --ext .ts",
    "build": "npm run lint && tsc",
    "pretest": "npm run build",
    "start": "node dist/main.js",
    "test": "jest --runInBand --verbose",
    "perf": "jest --config=jest.perf.config.js --runInBand"
  },
  "dependencies": {
    "extract-comments": "^1.1.0",
    "multilang-extract-comments": "^0.4.0",
    "parse-diff": "^0.7.0",
    "piscina": "^4.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^22.14.1",
    "eslint": "^9.25.0",
    "@typescript-eslint/parser": "^8.30.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  }
}
